<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <!-- has to increase filesize with this target. https://github.com/inthehand/32feet/issues/166 -->
    <TargetFramework>net6.0-windows10.0.19041.0</TargetFramework>
    <Nullable>enable</Nullable>
    <PublishSingleFile>true</PublishSingleFile>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishTrimmed>false</PublishTrimmed>
    <SelfContained>false</SelfContained>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>BinaryReceptor</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Desktop.Robot" Version="1.3.1" />
    <PackageReference Include="InTheHand.Net.Bluetooth" Version="4.0.33.1" />
  </ItemGroup>
</Project>
